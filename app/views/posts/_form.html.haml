.form-wrapper
    .post
        .post-body
            .image-wrap
                = image_tag 'placeholder2.jpg', id: 'image-preview', class: 'img-responsive'
                = simple_form_for @post, html: { multipart: true } do |f|
                    .row
                        .col-md-12.text-center
                            = f.error_notification
                    .container-fluid
                        .form-group.text-center
                            %h4 Carregar fotografia:
                            = f.input :image, label: false, input_html: {onChange: 'loadFile(event)'}
                        .form-group.text-center
                            = f.input :caption, label: false, placeholder: 'Escreva uma descrição...'
                        .form-group.text-center
                            = f.button :submit, value: 'Publicar', class: 'btn-info btn-block'